{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "typography": {
      "fontFamilies": [
        {
          "name": "Comic Sans",
          "slug": "comicsans",
          "fontFamily": "Comic Sans MS"
        },
        {
          "name": "Manrope",
          "slug": "manrope",
          "fontFamily": "Manrope, sans-serif",
          "fontFace": [
            {
              "src": [
                "file:./assets/fonts/manrope/Manrope-VariableFont_wght.woff2"
              ],
              "fontWeight": "200 800",
              "fontStyle": "normal",
              "fontFamily": "Manrope"
            }
          ]
        },
        {
          "name": "Fira Code",
          "slug": "fira-code",
          "fontFamily": "\"Fira Code\", monospace",
          "fontFace": [
            {
              "src": [
                "file:./assets/fonts/fira-code/FiraCode-VariableFont_wght.woff2"
              ],
              "fontWeight": "300 700",
              "fontStyle": "normal",
              "fontFamily": "\"Fira Code\""
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|comicsans",
      "fontSize": "var:preset|font-size|large",
      "fontWeight": "300",
      "letterSpacing": "-0.1px",
      "lineHeight": "1.4"
    },
    "blocks": {
      "core/code": {
        "typography": {
          "fontFamily": "var:preset|font-family|fira-code",
          "fontSize": "var:preset|font-size|medium",
          "fontWeight": "300"
        },
        "color": {
          "background": "var:preset|color|accent-5",
          "text": "var:preset|color|contrast"
        },
        "spacing": {
          "padding": {
            "right": "var:preset|spacing|40",
            "bottom": "var:preset|spacing|40",
            "left": "var:preset|spacing|40",
            "top": "var:preset|spacing|40"
          }
        }
      }
    }
  }
}
